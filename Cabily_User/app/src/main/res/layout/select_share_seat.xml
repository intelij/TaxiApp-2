<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/select_seatype_single_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.mylibrary.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:textColor="#4e4e4e"
            android:text="@string/car_type_select_dialog_label_shareSeat"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/seat_type_dialog_listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_seatype_single_top_layout"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"/>


    <RelativeLayout
        android:id="@+id/select_seatype_single_Bottm_layout"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/app_color"
        android:layout_below="@+id/seat_type_dialog_listView"
        android:orientation="vertical">

        <com.mylibrary.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:text="@string/action_cancel_alert"
            />
    </RelativeLayout>

</RelativeLayout>