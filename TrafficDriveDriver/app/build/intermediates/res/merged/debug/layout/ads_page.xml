<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff">

        <com.cabily.cabilydriver.widgets.CustomTextView
            android:id="@+id/ads_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#1d1d1d"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/ads_page_banner_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/ads_page_title"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:visibility="visible" />


        <com.cabily.cabilydriver.widgets.CustomTextView
            android:id="@+id/ads_page_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/ads_page_banner_image"
            android:layout_above="@+id/ads_page"
            android:gravity="center"
            android:text=""
            android:textColor="#4e4e4e"
            android:textSize="13sp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/ads_page"
            android:layout_above="@+id/ads_page_close_imageView"

           />
        <Button
            android:id="@+id/ads_page_close_imageView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/ads_pageds"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textColor="#ffffff"
            android:text="@string/alert_label_ok"
            android:background="@color/app_color"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/ads_pageds"
            android:layout_alignParentBottom="true"


            />


    </RelativeLayout>

</RelativeLayout>