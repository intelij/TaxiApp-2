<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:keepScreenOn="true">


    <android.support.v7.widget.CardView
        android:id="@+id/book_cardview_current_location_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="0dp">


        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:minWidth="280dp">

            <com.cabily.cabilydriver.widgets.CustomTextView
                android:id="@+id/pushnotification_alert_messge_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="@string/lbel_notification"
                android:textColor="@color/app_color"
                android:textSize="18dp" />


            <com.cabily.cabilydriver.widgets.CustomTextView
                android:id="@+id/pushnotification_alert_messge_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pushnotification_alert_messge_label"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:text="dgedsynfbjnfkdjfkdjfkdfjdnjng.jkdnjkg21555555555555555555555555555555555n.kgjdk.shdetg"
                android:textColor="#8a000000"
                android:textSize="16dp" />

            <RelativeLayout
                android:id="@+id/pushnotification_alert_ok"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/pushnotification_alert_messge_textview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/app_color">

                <com.cabily.cabilydriver.widgets.CustomTextView
                    android:id="@+id/pushnotification_alert_ok_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbel_notification_ok"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:textStyle="bold" />


            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>