<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:keepScreenOn="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout_home_driverdetail_header"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/app_color">

                <ImageView
                    android:id="@+id/ham_home"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ham_new"/>

                <com.otlcab.driver.widgets.CustomTextView
                    android:id="@+id/home_header_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/title_activity_home"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />
            </RelativeLayout>

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/home_user_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/relativeLayout_home_driverdetail_header"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/splash_image"
                app:siBorderColor="#000000"
                app:siBorderWidth="1dp" />

            <com.otlcab.driver.widgets.CustomTextView
                android:id="@+id/home_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_user_img"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#cc2ba4ff"
                android:textSize="25dp"
                android:textStyle="bold" />

            <com.otlcab.driver.widgets.CustomTextView
                android:id="@+id/home_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/not_available_text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#795548"
                android:textSize="20dp"
                android:textStyle="bold" />

            <com.otlcab.driver.widgets.CustomTextView
                android:id="@+id/home_car_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_car_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/home_online_btn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@+id/home_car_no"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/button_curve_background_blue"
                android:text="@string/go_online_string"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>