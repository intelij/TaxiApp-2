<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">


    <RelativeLayout
        android:id="@+id/layout_reide_request_header"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/app_color">


        <com.otlcab.driver.widgets.CustomTextView
            android:id="@+id/reide_requestTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/alert_tape_toaccept"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layout_reide_request_header"
        android:background="#cdcdcd">

        <LinearLayout
            android:id="@+id/linearList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#cdcdcd"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>
