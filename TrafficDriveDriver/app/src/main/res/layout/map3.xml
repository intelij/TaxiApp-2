<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff"
    android:keepScreenOn="true">

    <RelativeLayout
        android:id="@+id/map3_map_layout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#ff967d">
        <fragment
            android:id="@+id/map3"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/map3_complete_layout"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:background="#31312b"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/map3_complete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="#ff563f"
                android:text="Completed"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/map3_paid_layout"
            android:layout_below="@+id/map3_complete_layout"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:background="#31312b"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/map3_paid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:text="Paid"
                android:textColor="#16f017"
                android:gravity="center_vertical|center_horizontal" />
        </RelativeLayout>


    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map3_location_img"
        android:background="@drawable/location"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/map3_map_layout"
        android:layout_toLeftOf="@+id/map3_time_date"
        android:layout_toStartOf="@+id/map3_time_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text "
        android:id="@+id/map3_address"
        android:layout_alignTop="@+id/map3_location_img"
        android:layout_toRightOf="@+id/map3_location_img"
        android:layout_toEndOf="@+id/map3_location_img"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="32dp"
        android:textSize="18dp"
        android:textColor="#4f4c4d" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/viewStub"
        android:background="#b3b3b3"
        android:layout_below="@+id/map3_address"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map3_alaram_img"
        android:layout_below="@+id/viewStub"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/alarmclock"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/map3_time_date"
        android:textSize="18dp"
        android:textColor="#4f4c4d"
        android:layout_alignBottom="@+id/map3_alaram_img"
        android:layout_alignLeft="@+id/viewStu1"
        android:layout_alignStart="@+id/viewStu1"
        android:layout_marginLeft="10dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/viewStu1"
        android:background="#b3b3b3"
        android:layout_below="@+id/map3_time_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewStu1"
        android:id="@+id/map3_bottom_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/map3_no_of_km"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:textColor="#4f4c4d"
        android:layout_alignTop="@+id/map3_time"
        android:layout_alignRight="@+id/map3_total_paid_lable"
        android:layout_alignEnd="@+id/map3_total_paid_lable"
        android:layout_marginLeft="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ride distance"
        android:id="@+id/map3_ride_distance"
        android:layout_below="@+id/map3_no_of_km"
        android:layout_alignLeft="@+id/map3_no_of_km"
        android:layout_alignStart="@+id/map3_no_of_km"
        android:textSize="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/viewStu2"
        android:background="#b3b3b3"
        android:layout_below="@+id/map3_ride_distance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp" />


    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:id="@+id/viewStu3"
        android:background="#b3b3b3"
        android:layout_alignTop="@+id/map3_no_of_km"
        android:layout_toRightOf="@+id/map3_ride_distance"
        android:layout_toEndOf="@+id/map3_ride_distance"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/map3_time"
        android:layout_toRightOf="@+id/viewStu3"
        android:layout_toEndOf="@+id/viewStu3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:textColor="#4f4c4d"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time taken"
        android:id="@+id/map3_time_taken"
        android:textSize="16dp"
        android:layout_below="@+id/map3_time"
        android:layout_alignLeft="@+id/map3_time"
        android:layout_alignStart="@+id/map3_time"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" />
    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:id="@+id/viewStu4"
        android:background="#b3b3b3"
        android:layout_alignTop="@+id/map3_time"
        android:layout_toRightOf="@+id/map3_time_taken"
        android:layout_toEndOf="@+id/map3_time_taken"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/map3_wait_time"
        android:layout_alignLeft="@+id/viewStu4"
        android:layout_alignStart="@+id/viewStu4"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:textColor="#4f4c4d" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wait time"
        android:id="@+id/map3_wait_time_lable"
        android:layout_below="@+id/map3_wait_time"
        android:layout_alignLeft="@+id/map3_wait_time"
        android:layout_alignStart="@+id/map3_wait_time"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:textSize="16dp"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map3_bill_img"
        android:layout_below="@+id/viewStu2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bill" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bill:"
        android:id="@+id/map3_total_bill_lable"
        android:layout_alignTop="@+id/map3_bill_img"
        android:layout_toRightOf="@+id/map3_bill_img"
        android:layout_toEndOf="@+id/map3_bill_img"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:textColor="#181818" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/map3_total_bill"
        android:layout_below="@+id/viewStu2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="18dp"
        android:textColor="#181818"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Paid:"
        android:id="@+id/map3_total_paid_lable"
        android:layout_below="@+id/map3_bill_img"
        android:layout_alignLeft="@+id/map3_total_bill_lable"
        android:layout_alignStart="@+id/map3_total_bill_lable"
        android:textSize="18dp"
        android:textColor="#181818"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/map3_total_paid"
        android:layout_below="@+id/map3_bill_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18dp"
        android:textColor="#181818" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/viewStu5"
        android:background="#b3b3b3"
        android:layout_below="@+id/map3_total_paid_lable"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp" />
        </RelativeLayout>


</RelativeLayout>