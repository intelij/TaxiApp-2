    <style name="SmallProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/greenprogress</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/holo_blue_bright</item>
    </style>


    <style name="Animations_filter" parent="Theme.AppCompat.Light">
        <item name="@android:windowEnterAnimation">@anim/pull_in_left</item>
        <item name="@android:windowExitAnimation">@anim/push_out_right</item>
    </style>

    <style name="NoActionBar_Theme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="colorPrimary">#6ad6ef</item>
        <item name="colorPrimaryDark">#6ad6ef</item>
    </style>



    <style name="PushNotificaton_NoActionBar_Transparent_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:windowBackground">@color/pushnotification_custom_theme_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="StarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_ratingbar_full</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>

    <style name="StarRatingBarTwo" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_ratingbar_dashboard</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>


</resources>
