<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <!-- TSVETAN made color changes to primary green color -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color_transperent</item>
        <item name="colorAccent">@color/app_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="PrimarycolorThemeSplash" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">#84921b</item>
        <item name="colorPrimaryDark">#84921b</item>
    </style>
    <style name="Animations_photo_Picker" parent="Theme.AppCompat.Light">
        <item name="@android:windowEnterAnimation">@anim/pull_in_left</item>
        <item name="@android:windowExitAnimation">@anim/push_out_right</item>
    </style>
    <!-- Theme for custom toolbar and DrawerArrow color Change for Other class -->
    <style name="NoActionBar_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <!--<item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color_transperent1</item>
        <item name="colorAccent">@color/app_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/white</item>-->
    </style>



    <style name="TextLabel"  parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/normal</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/normal</item>
        <item name="colorControlActivated">@color/acciviated</item>
    </style>



    <!-- Transparent theme -->
    <color name="custom_theme_color">#E6ffffff</color>
    <color name="pushnotification_custom_theme_color">#80000000</color>
    <color name="pushnotification_custom_payment_theme_color">#F2ffffff</color>

    <style name="NoActionBar_Transparent_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PushNotificaton_NoActionBar_Transparent_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:windowBackground">@color/pushnotification_custom_theme_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PushNotificaton_NoActionBar_Payment_Transparent_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:windowBackground">@color/pushnotification_custom_payment_theme_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="SmallProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/greenprogress</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
    </style>


    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>

    <style name="FareBreakUp_CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/fare_breakup_custom_ratingbar</item>
        <!--<item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>-->
    </style>


    <style name="AndroidImageSlider_Corner_Oval_Orange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/indicator_corner_bg</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="shape">oval</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_color">#f60</item>
        <item name="unselected_color">#ffffff</item>
        <item name="selected_width">6dp</item>
        <item name="selected_height">6dp</item>
        <item name="unselected_width">6dp</item>
        <item name="unselected_height">6dp</item>
    </style>

    <style name="AndroidImageSlider_Attractive_Rect_Blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="shape">rect</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_color">#30CCE5</item>
        <item name="unselected_color">#333333</item>
        <item name="selected_width">13dp</item>
        <item name="selected_height">4dp</item>
        <item name="unselected_width">13dp</item>
        <item name="unselected_height">4dp</item>
    </style>

    <style name="AndroidImageSlider_Magnifier_Oval_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="shape">oval</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_color">#333333</item>
        <item name="unselected_color">#33000000</item>
        <item name="selected_width">8dp</item>
        <item name="selected_height">8dp</item>
        <item name="unselected_width">6dp</item>
        <item name="unselected_height">6dp</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
